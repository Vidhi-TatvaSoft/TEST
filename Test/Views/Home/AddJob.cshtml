@using DAL.ViewModels;
@model JobViewModel;

@{
    ViewData["Title"] = "Add Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-center">
<div class=" row">
    <div class="fs-3 text-dark fw-bold">Add New Job</div>

    <form asp-action="AddJob" asp-controller="Home" class=" row">
        <div class=" mt-2 ">
            <label for="JobName">Job Name*</label>
            <input asp-for="JobName" id="JobName" type="text" class=" form-control " placeholder="Job Name*" />
            <span asp-validation-for="JobName" class="text-danger"></span>
        </div>
        <div class=" mt-2 ">
            <label for="JobDescription">Job Description*</label>
            <input asp-for="JobDescription" id="JobDescription" type="text" class=" form-control "
                placeholder="Job Description*" />
            <span asp-validation-for="JobDescription" class="text-danger"></span>
        </div>
        <div class=" mt-2 ">
            <label for="CompanyName">Company Name*</label>
            <input asp-for="CompanyName" id="CompanyName" type="text" class=" form-control "
                placeholder="Company Name*" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
        <div class=" mt-2 ">
            <label for="Location">Location*</label>
            <input asp-for="Location" id="Location" type="text" class=" form-control " placeholder="Location*" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        @* <div class="text-danger fs-5">@ViewData["RegisterMessage"]</div> *@
        <div class="mt-4 w-100">
            <input type="submit" value="Add Job "
                class="btn btn-danger login-btn-btn bg-primary border-primary form-control">
        </div>
        <div class="mt-4 w-100">
                <a  asp-action="Index" asp-controller="Home" asp-route-JobId="@Model.JobId" class="btn btn-danger login-btn-btn bg-primary border-primary form-control" >Back</a>
            </div>
    </form>
</div>
</div>

@section Scripts {
       <partial name="_ValidationScriptsPartial" />
}