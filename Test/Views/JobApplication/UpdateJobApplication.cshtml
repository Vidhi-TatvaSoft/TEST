@using DAL.ViewModels;
@model JobApplicationViewModel;

@{
    ViewData["Title"] = "Update Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-center">
    <div class=" row">
        <div class="fs-3 text-dark fw-bold">Update Job</div>

        <form asp-action="UpdateJobApplicationForJob" asp-controller="JobApplication" class=" row">
            <div class=" mt-2 ">
                <input type="hidden" asp-for="UserId" id="UserId" value="@Model.UserId">
                <input type="hidden" asp-for="ApplicationId">
                <label for="UserName">User Name*</label>
                <input asp-for="UserName" id="UserName" type="text" class=" form-control " placeholder="User Name*" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class=" mt-2 ">
                <input type="hidden" asp-for="JobId" id="jobid" value="@Model.JobId">
                <label for="JobName">Job Name*</label>
                <input asp-for="JobName" id="JobName" type="text" class=" form-control " placeholder="Job Name*" />
                <span asp-validation-for="JobName" class="text-danger"></span>
            </div>
            @* <div class=" mt-2 ">
                <label for="JobDescription">Job Description*</label>
                <input asp-for="CompanyName" id="CompanyName" type="text" class=" form-control "
                    placeholder="Company Name*" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div> *@
            <div class=" mt-2 ">
                <label for="CompanyName">Company Name*</label>
                <input asp-for="CompanyName" id="CompanyName" type="text" class=" form-control "
                    placeholder="Company Name*" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class=" mt-2 ">
                <label for="Location">Location*</label>
                <input asp-for="Location" id="Location" type="text" class=" form-control " placeholder="Location*" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="mt-2 ">
                <label for="floatingSelect text-secondary ">status</label>
                <select asp-for="status" class="form-select" id="status" aria-label=" label select example">
                    <option value="Available">Applied</option>
                    <option value="Interviewing">Interviewing</option>
                    <option value="Offered">Offered</option>
                    <option value="Rejected">Rejected</option>
                </select>
            </div>

            @* <div class="text-danger fs-5">@ViewData["RegisterMessage"]</div> *@
            <div class="mt-4 w-100">
                <input type="submit" value="Update Job "
                    class="btn btn-danger login-btn-btn bg-primary border-primary form-control">

            </div>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}